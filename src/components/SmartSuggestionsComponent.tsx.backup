import { LinearGradient } from 'expo-linear-gradient';
import React, { useEffect, useState } from 'react';
import {
  Alert,
  Modal,
  ScrollView,
  StyleSheet,
  Text,
  TouchableOpacity,
  View,
} from 'react-native';
import AICategorizationService, { SmartSuggestion, SpendingInsight } from '../services/ml/aiCategorizationService';
import { enhancedAIInsightsService } from '../services/enhancedAIInsightsService';
import { getCurrentUserId } from '../services/databaseService';

interface SmartSuggestionsProps {
  visible: boolean;
  onClose: () => void;
}

export const SmartSuggestionsComponent: React.FC<SmartSuggestionsProps> = ({
  visible,
  onClose,
}) => {
  const [suggestions, setSuggestions] = useState<SmartSuggestion[]>([]);
  const [insights, setInsights] = useState<SpendingInsight[]>([]);
  const [quickInsights, setQuickInsights] = useState<any>(null);
  const [loading, setLoading] = useState(false);
  const [activeTab, setActiveTab] = useState<'suggestions' | 'insights' | 'enhanced'>('enhanced');

  useEffect(() => {
    if (visible) {
      loadData();
    }
  }, [visible]);

  const loadData = async () => {
    setLoading(true);
    try {
      const userId = await getCurrentUserId();
      
      // Load enhanced insights first
      if (userId) {
        try {
          const enhancedData = await enhancedAIInsightsService.getQuickInsights(userId);
          setQuickInsights(enhancedData);
        } catch (error) {
          console.log('Enhanced insights not available, falling back to basic insights');
        }
      }

      // Load basic suggestions and insights
      const [suggestionsData, insightsData] = await Promise.all([
        AICategorizationService.getSmartSuggestions(),
        AICategorizationService.getSpendingInsights()
      ]);

      setSuggestions(suggestionsData);
      setInsights(insightsData);
    } catch (error) {
      console.error('Error loading smart suggestions:', error);
    } finally {
      setLoading(false);
    }
  };

  const handleSuggestionAction = (suggestion: SmartSuggestion) => {
    Alert.alert(
      'Apply Suggestion',
      `Would you like to apply this suggestion: ${suggestion.title}?`,
      [
        { text: 'Cancel', style: 'cancel' },
        { text: 'Apply', onPress: () => console.log('Applying suggestion:', suggestion) }
      ]
    );
  };

  const getImpactColor = (impact: string) => {
    switch (impact) {
      case 'high': return '#EF4444';
      case 'medium': return '#F59E0B';
      case 'low': return '#10B981';
      case 'positive': return '#10B981';
      case 'negative': return '#EF4444';
      default: return '#6B7280';
    }
  };

  const getCategoryIcon = (category: string) => {
    switch (category) {
      case 'spending_optimization': return 'trending-down';
      case 'budget_optimization': return 'pie-chart';
      case 'wealth_building': return 'trending-up';
      case 'getting_started': return 'play-circle';
      default: return 'bulb';
    }
  };

  const getCategoryColor = (category: string) => {
    switch (category) {
      case 'spending_optimization': return '#EF4444';
      case 'budget_optimization': return '#F59E0B';
      case 'wealth_building': return '#10B981';
      case 'getting_started': return '#6366F1';
      default: return '#6B7280';
    }
  };

  const getPriorityColor = (priority: string) => {
    switch (priority) {
      case 'high': return '#DC2626';
      case 'medium': return '#D97706';
      case 'low': return '#059669';
      default: return '#6B7280';
    }
  };

      // Load basic suggestions and insights as fallback
      const [suggestionsData, insightsData] = await Promise.all([
        AICategorizationService.generateSmartSuggestions(),
        AICategorizationService.generateSpendingInsights(),
      ]);
      setSuggestions(suggestionsData);
      setInsights(insightsData);
    } catch (error) {
      console.error('Error loading smart suggestions:', error);
      Alert.alert('Error', 'Failed to load smart suggestions');
    } finally {
      setLoading(false);
    }
  };

  const renderEnhancedInsight = (insight: any, index: number) => (
    <View key={index} style={styles.enhancedInsightCard}>
      <View style={styles.enhancedInsightHeader}>
        <View style={[styles.enhancedInsightIcon, { backgroundColor: getImpactColor(insight.impact) + '20' }]}>
          <Ionicons 
            name={insight.category === 'spending_optimization' ? 'trending-down' : 
                  insight.category === 'budget_optimization' ? 'pie-chart' :
                  insight.category === 'wealth_building' ? 'trending-up' : 
                  insight.category === 'getting_started' ? 'play-circle' : 'bulb'} 
            size={20} 
            color={getImpactColor(insight.impact)} 
          />
        </View>
        <View style={styles.enhancedInsightContent}>
          <Text style={styles.enhancedInsightTitle}>{insight.title}</Text>
          <View style={styles.enhancedInsightMeta}>
            <View style={[styles.enhancedImpactBadge, { backgroundColor: getImpactColor(insight.impact) }]}>
              <Text style={styles.enhancedImpactText}>{insight.impact?.toUpperCase() || 'INFO'}</Text>
            </View>
            {insight.amount_impact && (
              <Text style={[styles.enhancedSavingsText, { color: '#10B981' }]}>
                â‚¹{insight.amount_impact}
              </Text>
            )}
          </View>
        </View>
      </View>
      
      <Text style={styles.enhancedInsightDescription}>
        {insight.description}
      </Text>

      {insight.suggestion && (
        <View style={styles.enhancedSuggestionContainer}>
          <Ionicons name="arrow-forward" size={14} color="#6366F1" />
          <Text style={styles.enhancedSuggestionText}>{insight.suggestion}</Text>
        </View>
      )}
    </View>
  );

  const renderEnhancedTab = () => {
    if (!quickInsights) {
      return (
        <View style={styles.enhancedEmptyState}>
          <Ionicons name="analytics" size={48} color="#6B7280" />
          <Text style={styles.enhancedEmptyStateTitle}>Enhanced AI Insights</Text>
          <Text style={styles.enhancedEmptyStateText}>
            Add more expenses to unlock AI-powered insights with detailed financial analysis and personalized recommendations.
          </Text>
          <TouchableOpacity 
            style={styles.enhancedUpgradeButton}
            onPress={() => {
              onClose();
              // Navigate to add expense or onboarding
            }}
          >
            <Text style={styles.enhancedUpgradeButtonText}>Start Tracking Expenses</Text>
          </TouchableOpacity>
        </View>
      );
    }

    return (
      <ScrollView showsVerticalScrollIndicator={false}>
        {/* Financial Health Score */}
        {quickInsights.financial_health_score && (
          <LinearGradient
            colors={['#6366F1', '#8B5CF6']}
            style={styles.enhancedHealthCard}
          >
            <View style={styles.enhancedHealthContent}>
              <Ionicons name="fitness" size={32} color="white" />
              <View style={styles.enhancedHealthInfo}>
                <Text style={styles.enhancedHealthTitle}>Financial Health Score</Text>
                <Text style={styles.enhancedHealthScore}>
                  {quickInsights.financial_health_score.overall_score}/100
                </Text>
                <Text style={styles.enhancedHealthGrade}>
                  Grade: {quickInsights.financial_health_score.grade}
                </Text>
              </View>
            </View>
            <Text style={styles.enhancedHealthExplanation}>
              {quickInsights.financial_health_score.explanation}
            </Text>
          </LinearGradient>
        )}

        {/* Smart Insights */}
        {quickInsights.smart_insights && quickInsights.smart_insights.length > 0 && (
          <View style={styles.enhancedSection}>
            <Text style={styles.enhancedSectionTitle}>ðŸ’¡ Smart Insights</Text>
            {quickInsights.smart_insights.map(renderEnhancedInsight)}
          </View>
        )}

        {/* Quick Actions */}
        <View style={styles.enhancedSection}>
          <Text style={styles.enhancedSectionTitle}>ðŸš€ Quick Actions</Text>
          <TouchableOpacity 
            style={styles.enhancedActionCard}
            onPress={() => {
              Alert.alert(
                'Full AI Insights',
                'Open the complete AI insights dashboard for detailed analysis?',
                [
                  { text: 'Cancel', style: 'cancel' },
                  { text: 'Open', onPress: () => {
                    onClose();
                    // TODO: Navigate to enhanced insights component
                  }}
                ]
              );
            }}
          >
            <Ionicons name="analytics" size={24} color="#6366F1" />
            <View style={styles.enhancedActionContent}>
              <Text style={styles.enhancedActionTitle}>View Full AI Analysis</Text>
              <Text style={styles.enhancedActionSubtitle}>
                Get comprehensive insights, coaching, and investment guidance
              </Text>
            </View>
            <Ionicons name="chevron-forward" size={20} color="#6B7280" />
          </TouchableOpacity>

          <TouchableOpacity 
            style={styles.enhancedActionCard}
            onPress={() => {
              Alert.alert(
                'AI Financial Coach',
                'Get personalized financial coaching based on your spending patterns',
                [
                  { text: 'Cancel', style: 'cancel' },
                  { text: 'Start Coaching', onPress: () => {
                    // TODO: Navigate to coaching tab
                  }}
                ]
              );
            }}
          >
            <Ionicons name="fitness" size={24} color="#10B981" />
            <View style={styles.enhancedActionContent}>
              <Text style={styles.enhancedActionTitle}>AI Financial Coach</Text>
              <Text style={styles.enhancedActionSubtitle}>
                Get weekly goals, daily tips, and challenges
              </Text>
            </View>
            <Ionicons name="chevron-forward" size={20} color="#6B7280" />
          </TouchableOpacity>
        </View>
