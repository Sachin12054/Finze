rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures - users can upload, read, update and delete their own profile pictures
    match /profile-pictures/{userId}_{timestamp}.jpg {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Alternative pattern for any file in profile-pictures folder
    match /profile-pictures/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // General rule for authenticated users
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
